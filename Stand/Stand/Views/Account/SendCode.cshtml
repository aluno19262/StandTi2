@model Stand.Models.SendCodeViewModel
@{
    ViewBag.Title = "Enviar condigo de validação";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Enviar codigo", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("Lembrar", @Model.RememberMe)
    <div class="row">
        <div class="col-md-8">
            
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
